  // Custom styles for this page
  link(href='vendor/datatables/dataTables.bootstrap4.min.css' rel='stylesheet')
  link(href='css/carts.css' rel='stylesheet' type=text/css)
// Page Wrapper
#wrapper
  include sidebar
  // Content Wrapper
  #content-wrapper.d-flex.flex-column
    // Main Content
    #content
      include topbar
      // Begin Page Content
      .container-fluid
        // Page Heading
        h1.h3.mb-2.text-gray-800
        p.mb-4.text-right
          |
          a.btn.btn-primary.btn-sm(href='/goods') goods
        // DataTales Example
        .card.shadow.mb-4
          .card-header.py-3
            h6.m-0.font-weight-bold.text-primary Checkout Confirmation
          .card-body
            -if (typeof (successful) !== 'undefined' && successful === false)
                .alert.alert-danger.alert-dismissible.text-center(role='alert' hidden=false)
                    .li.text-center #{message}
            - else if (typeof (successful) !== 'undefined' && successful == true)
                .alert.alert-success.alert-dismissible.text-center(role='alert')
                    .li.text-center #{message}
      // /.container-fluid
    // End of Main Content
    // Footer
    footer.sticky-footer.bg-white
      .container.my-auto
        .copyright.text-center.my-auto
          span Copyright &copy; Your Website 2022s
    // End of Footer
  // End of Content Wrapper
// End of Page Wrapper
// Scroll to Top Button
a.scroll-to-top.rounded(href='#page-top')
  i.fas.fa-angle-up
// Logout Modal
include logout-modal
