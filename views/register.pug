doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description' content='')
  meta(name='author' content='')
  title SB Admin 2 - Register
  // Custom fonts for this template
  link(href='vendor/fontawesome-free/css/all.min.css' rel='stylesheet' type='text/css')
  link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i' rel='stylesheet')
  // Custom styles for this template
  link(href='css/sb-admin-2.min.css' rel='stylesheet')
.container
  .card.o-hidden.border-0.shadow-lg.my-5
    .card-body.p-0
      // Nested Row within Card Body
      .row
        .col-lg-5.d-none.d-lg-block.bg-register-image
        .col-lg-7
          .p-5
            .text-center
              h1.h4.text-gray-900.mb-4 Create an Account!
            -if (typeof (error) !== 'undefined' && error.length > 0)
                  .alert.alert-danger.alert-dismissible(role='alert')
                      each item in error
                          .li.text-center #{item}
            -if (typeof (success) !== 'undefined' && success.length > 0)
                   .alert.alert-success.alert-dismissible(role='alert')
                       each suc in success
                           .li.text-center #{suc}
            form.user(action='/register' method='POST')
              .form-group.row
                .col-sm-6.mb-3.mb-sm-0
                  input#exampleFirstName.form-control.form-control-user(type='text' placeholder='First Name' name='exampleFirstName')
                .col-sm-6
                  input#exampleLastName.form-control.form-control-user(type='text' placeholder='Last Name' name='exampleLastName')
              .form-group
                input#exampleInputEmail.form-control.form-control-user(type='email' placeholder='Email Address' name='exampleInputEmail')
              .form-group
                input#exampleInputUsername.form-control.form-control-user(type='text' placeholder='User Name' name='exampleInputUsername')
              .form-group.row
                .col-sm-6.mb-3.mb-sm-0
                  input#exampleInputPassword.form-control.form-control-user(type='password' placeholder='Password' name='exampleInputPassword')
                .col-sm-6
                  input#exampleRepeatPassword.form-control.form-control-user(type='password' placeholder='Repeat Password' name='exampleRepeatPassword')
              a.btn.btn-primary.btn-user.btn-block(onclick="this.closest('form').submit(); return false;")
                | Register Account
              hr
              a.btn.btn-google.btn-user.btn-block(href='index.html')
                i.fab.fa-google.fa-fw
                |  Register with Google
              a.btn.btn-facebook.btn-user.btn-block(href='index.html')
                i.fab.fa-facebook-f.fa-fw
                |  Register with Facebook
            hr
            .text-center
              a.small(href='forgot-password.html') Forgot Password?
            .text-center
              a.small(href='/login') Already have an account? Login!
// Bootstrap core JavaScript
script(src='vendor/jquery/jquery.min.js')
script(src='vendor/bootstrap/js/bootstrap.bundle.min.js')
// Core plugin JavaScript
script(src='vendor/jquery-easing/jquery.easing.min.js')
// Custom scripts for all pages
script(src='js/sb-admin-2.min.js')
